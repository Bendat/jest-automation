{
  "name": "jest-automation",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "console:deps": "npm i --prefix packages/console",
    "console:build": "nx build --prefix packages/console",
    "console:publish": "npm publish --prefix dist/packages/console --scope=public",
    "console:deps:local": "npm i --prefix packages/console --registry=http://localhost:4873",
    "cucumber:deps": "npm i --prefix packages/cucumber",
    "cucumber:build": "nx build --prefix packages/cucumber",
    "cucumber:publish": "npm publish --prefix dist/packages/cucumber --scope=public",
    "cucumber:deps:local": "npm i --prefix packages/cucumber --registry=http://localhost:4873",
    "store:deps": "npm i --prefix packages/store",
    "store:publish": "npm publish --prefix dist/packages/store --scope=public",
    "store:deps:local": "npm i --prefix packages/store --registry=http://localhost:4873",
    "store:build": "nx build --prefix packages/store",
    "shared-utilities:deps": "npm i --prefix packages/shared-utilities",
    "shared-utilities:deps:local": "npm i --prefix packages/shared-utilities --registry=http://localhost:4873",
    "shared-utilities:build": "nx build --prefix packages/shared-utilities",
    "shared-utilities:publish": "npm publish --prefix dist/packages/shared-utilities --scope=public",
    "dto:deps:local": "npm i --prefix packages/dto --registry=http://localhost:4873",
    "dto:build": "nx build --prefix packages/dto",
    "dto:publish": "npm publish --prefix dist/packages/dto --scope=public",
    "all:deps": "npm run console:deps && npm run cucumber:deps && npm run store:deps && npm run shared-utilities:deps && npm run store:deps && npm run dto:deps",
    "all:deps:local": "npm run console:deps:local && npm run cucumber:deps:local && npm run store:deps:local && npm run shared-utilities:deps:local && npm run dto:deps:local",
    "affected:build": "nx affected --target=build",
    "all:build": "npm run console:build && npm run cucumber:build && npm run store:build && npm run shared-utilities:build && npm run dto:build",
    "all:publish": "npm run console:publish && npm run cucumber:publish && npm run store:publish && npm run shared-utilities:publish && npm run dto:publish"
  },
  "dependencies": {
    "@cucumber/gherkin": "^24.0.0",
    "@docusaurus/core": "2.0.1",
    "@docusaurus/preset-classic": "2.0.1",
    "@mdx-js/react": "^1.6.21",
    "ansi-colors": "^4.1.3",
    "callsites": "^4.0.0",
    "class-validator": "^0.13.2",
    "clsx": "^1.1.1",
    "dotenv": "^16.0.2",
    "get-current-line": "^6.6.0",
    "prism-react-renderer": "^1.2.1",
    "project-root-directory": "^1.0.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "2.0.1",
    "@jscutlery/semver": "^2.26.0",
    "@nrwl/cli": "14.5.10",
    "@nrwl/eslint-plugin-nx": "14.5.10",
    "@nrwl/jest": "14.5.10",
    "@nrwl/js": "14.5.10",
    "@nrwl/linter": "14.5.10",
    "@nrwl/node": "14.5.10",
    "@nrwl/workspace": "14.5.10",
    "@nx-plus/docusaurus": "^14.1.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "~8.15.0",
    "eslint-config-prettier": "8.1.0",
